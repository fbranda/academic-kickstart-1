	Keywords = {link prediction, social networks},
	Location = {New York, New York, USA},
	Numpages = {10},
	Pages = {1266--1275},
	Series = {KDD '14},
	Title = {Who to Follow and Why: Link Prediction with Explanations},
	Url = {http://www.francescobonchi.com/frp1266-barbieri.pdf},
	Year = {2014},
	Bdsk-Url-1 = {http://www.francescobonchi.com/frp1266-barbieri.pdf},
