	Pages = {258--273},
	Title = {A Generative Bayesian Model for Item and User Recommendation in Social Rating Networks with Trust Relationships},
	Url = {https://www.researchgate.net/publication/265856499_A_Generative_Bayesian_Model_for_Item_and_User_Recommendation_in_Social_Rating_Networks_with_Trust_Relationships},
	Year = {2014},
	Bdsk-Url-1 = {https://www.researchgate.net/publication/265856499_A_Generative_Bayesian_Model_for_Item_and_User_Recommendation_in_Social_Rating_Networks_with_Trust_Relationships},
